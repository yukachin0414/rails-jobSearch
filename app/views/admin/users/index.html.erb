<table>
  <thead>
    <tr>
      <th>
        id
      </th>
      <th>
        アドレス
      </th>
      <th>
        エントリー
      </th>
      <th>
        お気に入り
      </th>
      <th>
        詳細
      </th>
    </tr>
  </thead>
  <tbody>
    
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= 'あり' if user.entries.exists? %>
        </td>
        <td>
          <%= 'あり' if user.favorites.exists? %>
        </td>
        <td>
          <%= link_to '詳細', admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
